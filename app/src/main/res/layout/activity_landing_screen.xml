<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".f1.landing.LandingScreenActivity">

    <ImageView
        android:id="@+id/splashbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash"
        android:foreground="@drawable/landing_grad"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
       />

    <TextView
        android:id="@+id/landingAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/desc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/bold"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/regular"
        android:text="@string/desc"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/start"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/ferrari_red"
        android:fontFamily="@font/regular"
        android:padding="16dp"
        android:text="Lets Go!" />


</RelativeLayout>