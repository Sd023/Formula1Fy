<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/driverCardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="5dp"
    android:padding="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/teamColor"
            android:layout_width="4dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:background="@color/ferrari"
            />

        <TextView
            android:id="@+id/driverMainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:maxEms="9"
            android:maxLines="2"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/teamColor"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/driverTeamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:maxLines="2"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/teamColor"
            android:layout_below="@id/driverMainName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/driverTotalPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:layout_toStartOf="@id/expandListBtn"
            android:layout_marginEnd="10dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/expandListBtn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:clickable="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/arrow_expand"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"

            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>