<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    android:padding="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/nextRaceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/roundNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:maxEms="9"
                android:maxLines="2"
                android:fontFamily="@font/regular"
                android:textColor="@color/ferrari_red"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/locality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:maxEms="9"
                android:maxLines="2"
                android:layout_below="@id/roundNo"
                android:fontFamily="@font/regular"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/raceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Race"
                android:textSize="16sp"
                android:maxLines="2"
                android:fontFamily="@font/regular"
                android:textColor="@color/black"
                android:layout_below="@id/locality"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="14dp"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/nextRaceLayout"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/expandListBtn"
            >

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:maxLines="2"
                android:fontFamily="@font/regular"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>

        </RelativeLayout>


        <ImageView
            android:id="@+id/expandListBtn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="5dp"
            android:clickable="true"

            android:src="@drawable/arrow_expand" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>